---
import Layout from "../layouts/Layout.astro";
import IconAngle from "../svgs/IconAngle.astro";
import IconArrow from "../svgs/IconArrow.astro";
import IconClose from "../svgs/IconClose.astro";
import IconHamburger from "../svgs/IconHamburger.astro";
import Logo from "../svgs/Logo.astro";
---

<Layout title="Frontend Mentor | Room homepage">
  <header>
    <div class="max-w-screen-2xl bg-black">
      <div
        class="relative z-0 flex items-center px-6 py-10 sm:px-14 sm:py-14"
        id="primary-nav-wrapper"
      >
        <button
          id="primary-nav-toggle"
          aria-expanded="false"
          aria-controls="primary-nav"
          class="absolute bottom-0 left-6 top-0 z-0 sm:hidden"
        >
          <IconHamburger
            class="text-my-neutral-100"
            id="primary-nav-toggle-icon-hamburger"
          />
          <IconClose
            class="hidden text-my-neutral-300"
            id="primary-nav-toggle-icon-close"
          />
          <span class="sr-only">Menu</span>
        </button>

        <div class="mx-auto sm:mx-0" id="primary-nav-logo">
          <Logo class="text-my-neutral-100" />
          <span class="sr-only">Room</span>
        </div>

        <nav class="ml-auto hidden gap-9 sm:ml-14 sm:flex" id="primary-nav">
          <a
            href="#"
            class="font-semibold lowercase leading-none tracking-tighter text-my-neutral-900 sm:text-my-neutral-100"
            >Home</a
          >
          <a
            href="#"
            class="font-semibold lowercase leading-none tracking-tighter text-my-neutral-900 sm:text-my-neutral-100"
            >Shop</a
          >
          <a
            href="#"
            class="font-semibold lowercase leading-none tracking-tighter text-my-neutral-900 sm:text-my-neutral-100"
            >About</a
          >
          <a
            href="#"
            class="font-semibold lowercase leading-none tracking-tighter text-my-neutral-900 sm:text-my-neutral-100"
            >Contact</a
          >
        </nav>
      </div>
    </div>
  </header>
</Layout>

<main>
  <section>
    <h1 class="sr-only">Room features</h1>
    <article>
      <div>
        <picture>
          <source srcset="" />
          <img src="images/mobile/hero-1.webp" alt="" />
        </picture>
      </div>
      <div>
        <h2>Discover innovative ways to decorate</h2>
        <p>
